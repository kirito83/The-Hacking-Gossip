<h1>Edition du gossip</h1>

<br/>

<%= form_for @gossip do |f| %>
  	<div class='form-group'>
		<label>Pseudo</label>
		<%= f.text_field :anonymous_author, class: 'form-control' %>
	</div>
	<div class='form-group'>
		<label>Contenu du gossip</label>
		<%= f.text_field :content, class: 'form-control' %>
	</div>
	<br/>
	<div class='form-group'>
		<button type='submit' class='btn btn-success'>Editer le gossip</button>
		<a href='<%= gossip_path(@gossip.id) %>' class='btn btn-danger' data-confirm='Etes vous sur?' data-method='DELETE'>Supprimer</a>
		<a href='<%= gossips_path %>' class='btn btn-primary'>Revenir Ã  la liste des gossips</a>
	</div>
<% end %>